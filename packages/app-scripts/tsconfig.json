{
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [ "es2017", "dom" ],
    "jsx": "react",
    "allowJs": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
  },
  "include": [
    "../../../src"
  ]
}